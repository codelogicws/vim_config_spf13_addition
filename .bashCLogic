# Setup Powerline
powerline-daemon -q
POWERLINE_BASH_CONTINUATION=1
POWERLINE_BASH_SELECT=1
. /usr/local/lib/python2.7/dist-packages/powerline/bindings/bash/powerline.sh

export TERM='xterm-256color'
export EDITOR='vim'
export PROJECT_FOLDER="/home/pair/projects/fcc/barchart/"

alias menu='/home/pair/.tmuxinatorMenu.sh'
alias edit='tmuxinator edit TS'

# TMUX
if which tmux >/dev/null 2>&1; then
    #if not inside a tmux session, and if no session is started, start a new session
    #test -z "$TMUX" && (tmux -2 attach || tmux -2 new-session)
    test -z "$TMUX" && (/home/pair/.tmuxinatorMenu.sh)
fi

